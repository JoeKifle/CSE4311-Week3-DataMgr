<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.john.datamanager_week3.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/connType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connected to: waiting for connection.."
            />

        <TextView
            android:id="@+id/TX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TX: waiting for connection.."
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />
        <TextView
            android:id="@+id/RX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RX: waiting for connection..."
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
